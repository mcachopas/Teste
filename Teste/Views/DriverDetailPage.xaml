<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste.Views.DriverDetailPage">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Driver.Name}" FontSize="Large"/>
        <Label Text="{Binding Driver.Surname}" FontSize="Small"/>
        <Label Text="{Binding Driver.BirthYear}" FontSize="Small"/>
        <Label Text="{Binding Driver.Document}" FontSize="Small"/>
        <Label Text="{Binding Driver.Expiration}" FontSize="Small"/>
        <Label Text="{Binding Driver.Adress}" FontSize="Small"/>
        <Label Text="{Binding Driver.Phone}" FontSize="Small"/>
    </StackLayout>
</ContentPage>