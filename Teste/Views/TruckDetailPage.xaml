<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste.Views.TruckDetailPage">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Truck.Brand}" FontSize="Large"/>
        <Label Text="{Binding Truck.Model}" FontSize="Small"/>
        <Label Text="{Binding Truck.Motor}" FontSize="Small"/>
        <Label Text="{Binding Truck.Year}" FontSize="Small"/>
        <Label Text="{Binding Truck.FuelType}" FontSize="Small"/>
        <Label Text="{Binding Truck.OilType}" FontSize="Small"/>
    </StackLayout>
</ContentPage>